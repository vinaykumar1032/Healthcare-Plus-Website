<body>
    <h1>Application of: <%=user.NAME%> (<%= user.ID%>) <i class="fa-solid fa-clipboard-list"></i></h1>
    <table>
        <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>CONTACT NUMBER</th>
            <th>SKILLS</th>
            <th>AVAILABILITY</th>
            <th>STATUS OF BEING VOLUNTEER</th>
            <th>CONFIRM</th>
        </tr>
                <tr>
                <td><%= user.ID%></td>
                <td><%=user.NAME%></td>
                <td><%=user.EMAIL%></td>
                <td><%=user.CONTACT%></td>
                <td><%=user.SKILLS%></td>
                <td><%=user. AVAILABILITY%></td>
                <td><%=user. STATUS%></td>
                <form  method="post" action="/login/<%= user.ID%>?_method=PATCH">
                    <td><button>Confirm Volunteer</button></td>
                </form>
                </tr>
    </table>
